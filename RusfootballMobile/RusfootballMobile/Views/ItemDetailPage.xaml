<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RusfootballMobile.Views.ItemDetailPage"
             Title="{Binding Title}">
    <Grid Padding="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Text="{Binding Path=Item.Title, Mode=OneWay}" LineBreakMode="WordWrap" FontAttributes="Bold" FontSize="18"/>
        <WebView Grid.Row="1" x:Name="WebView" Navigating="WebView_OnNavigating"/>
        <ActivityIndicator x:Name="ActivityIndicator" Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center"/>
        <StackLayout Grid.Row="2"  Orientation="Vertical">
            <Label Text="Адрес новости:" FontSize="10"/>
            <Label Text="{Binding Path=Address, Mode=OneWay}" LineBreakMode="WordWrap" FontSize="10" />
        </StackLayout>
    </Grid>
</ContentPage>